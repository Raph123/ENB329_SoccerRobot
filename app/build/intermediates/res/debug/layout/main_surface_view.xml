<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/MainActivity_activity_java_surface_view"
        opencv:show_fps="true"
        opencv:camera_id="any" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Light_max"
            android:layout_alignParentBottom="true" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Hue1"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/saturation_min" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saturation_min"
            android:layout_gravity="center|bottom"
            android:layout_above="@+id/Light_max" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ball"
            android:id="@+id/Ball"
            android:onClick="setBallColour"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set obstacle colour"
            android:id="@+id/obstacle"
            android:onClick="setObstacleColour"
            android:layout_below="@+id/Ball"
            android:layout_alignRight="@+id/Ball" />

    </RelativeLayout>


</FrameLayout>
